{
  "name": "tokenizeart-monorepo",
  "version": "1.0.0",
  "description": "NFT Minting Platform Monorepo - Smart Contracts + Frontend",
  "private": true,
  "workspaces": [
    "deployment",
    "mint"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=mint",
    "build": "npm run build --workspace=mint",
    "start": "npm run start --workspace=mint",
    "lint": "npm run lint --workspace=mint",
    "compile": "npm run compile --workspace=deployment",
    "deploy": "npm run deploy --workspace=deployment",
    "dev:frontend": "npm run dev --workspace=mint",
    "build:frontend": "npm run build --workspace=mint",
    "start:frontend": "npm run start --workspace=mint",
    "lint:frontend": "npm run lint --workspace=mint",
    "compile:contracts": "npm run compile --workspace=deployment",
    "deploy:contracts": "npm run deploy --workspace=deployment",
    "clean:contracts": "npm run clean --workspace=deployment",
    "install:all": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asebrech/tokenizeArt.git"
  },
  "keywords": ["nft", "ethereum", "hardhat", "nextjs", "web3", "monorepo"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asebrech/tokenizeArt/issues"
  },
  "homepage": "https://github.com/asebrech/tokenizeArt#readme"
}
